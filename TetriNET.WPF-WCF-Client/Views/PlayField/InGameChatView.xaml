<UserControl x:Class="TetriNET.WPF_WCF_Client.Views.PlayField.InGameChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:playField="clr-namespace:TetriNET.WPF_WCF_Client.ViewModels.PlayField"
             xmlns:Converters="clr-namespace:TetriNET.WPF_WCF_Client.Converters" mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance playField:InGameChatViewModelDesignData, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <!--<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>-->
            <Converters:SpecialToStringConverter x:Key="SpecialToStringConverter"/>
            <!--<Converters:SpecialToBrushConverter x:Key="SpecialToBrushConverter"/>-->
            <DataTemplate x:Key="SpecialDataTemplate" DataType="{x:Type playField:InGameChatEntry}">
                <WrapPanel>
                    <TextBlock Text="{Binding Id}" Foreground="Black" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="." Foreground="Black" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="{Binding Special, Converter={StaticResource SpecialToStringConverter}}" Foreground="DarkMagenta" FontSize="10" Margin="0,0,2,0"/>
                    <!--<Rectangle Fill="{Binding Special, Converter={StaticResource SpecialToBrushConverter}}" Width="12" Height="12"/>-->
                    <TextBlock Text="on" Foreground="Black" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="{Binding Target}" Foreground="Blue" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="from" Foreground="Black" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="{Binding Source}" Foreground="Blue" FontSize="10"/>
                </WrapPanel>
            </DataTemplate>
            <DataTemplate x:Key="AddOneLineDataTemplate" DataType="{x:Type playField:InGameChatEntry}">
                <WrapPanel>
                    <TextBlock Text="{Binding Id}" Foreground="Black" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="." Foreground="Black" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="1" Foreground="DarkMagenta" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="line added to All from" Foreground="DarkMagenta" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="{Binding Source}" Foreground="Blue" FontSize="10"/>
                </WrapPanel>
            </DataTemplate>
            <DataTemplate x:Key="AddMultiLinesDataTemplate" DataType="{x:Type playField:InGameChatEntry}">
                <WrapPanel>
                    <TextBlock Text="{Binding Id}" Foreground="Black" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="." Foreground="Black" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="{Binding LinesAdded}" Foreground="DarkMagenta" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="lines added to All from" Foreground="DarkMagenta" FontSize="10" Margin="0,0,2,0"/>
                    <TextBlock Text="{Binding Source}" Foreground="Blue" FontSize="10"/>
                </WrapPanel>
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Attacks/Defenses" HorizontalAlignment="Left" />
        <ItemsControl 
            Grid.Row="1" IsTabStop="False" Focusable="False" FocusManager.IsFocusScope="False"
            Background="White" Width="Auto" MaxWidth="300" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Top"
            ItemsSource="{Binding Entries, Mode=OneWay}">
            <ItemsControl.Template>
                <ControlTemplate>
                    <ItemsPresenter />
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.ItemTemplate>
                <!--<DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="{Binding Id}" Foreground="Black" FontSize="10" Margin="0,0,2,0"/>
                        <TextBlock Text="." Foreground="Black" FontSize="10" Margin="0,0,2,0"/>
                        <TextBlock Text="{Binding Special}" Foreground="DarkMagenta" FontSize="10" Margin="0,0,2,0"/>
                        <TextBlock Text="on" Foreground="Black" Visibility="{Binding IsTargetVisible, Converter={StaticResource BooleanToVisibilityConverter}}" FontSize="10" Margin="0,0,2,0"/>
                        <TextBlock Text="{Binding Target}" Foreground="Blue" Visibility="{Binding IsTargetVisible, Converter={StaticResource BooleanToVisibilityConverter}}" FontSize="10" Margin="0,0,2,0"/>
                        <TextBlock Text="from" Foreground="Black" FontSize="10" Margin="0,0,2,0"/>
                        <TextBlock Text="{Binding Source}" Foreground="Blue" FontSize="10"/>
                    </WrapPanel>
                </DataTemplate>-->
                <!-- 
                    Following code seems to create problem with key mapping in PlayFieldView
                    PlayFieldView tab lose focus
                -->
                <DataTemplate DataType="{x:Type playField:InGameChatEntry}">
                    <ContentControl Content="{Binding}" IsTabStop="False">
                        <ContentControl.Style>
                            <Style TargetType="{x:Type ContentControl}">
                                <Setter Property="ContentTemplate" Value="{StaticResource SpecialDataTemplate}" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsAddLines}" Value="True" />
                                            <Condition Binding="{Binding LinesAdded}" Value="1" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="ContentTemplate" Value="{StaticResource AddOneLineDataTemplate}" />
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsAddLines}" Value="True" />
                                            <Condition Binding="{Binding MoreThanOneLine}" Value="True" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="ContentTemplate" Value="{StaticResource AddMultiLinesDataTemplate}" />
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </DataTemplate>
                
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
