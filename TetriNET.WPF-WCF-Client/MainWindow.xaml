<Window x:Class="TetriNET.WPF_WCF_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:TetriNET.WPF_WCF_Client.Controls"
        Title="TetriNET" Height="650" Width="800"
        KeyDown="Window_KeyDown" 
        KeyUp="Window_KeyUp" 
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <controls:PlayerGrid x:Name="PlayerGrid" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <controls:OpponentGrid x:Name="OpponentGrid1" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <controls:OpponentGrid x:Name="OpponentGrid2" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <controls:OpponentGrid x:Name="OpponentGrid3" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <controls:OpponentGrid x:Name="OpponentGrid4" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <controls:OpponentGrid x:Name="OpponentGrid5" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <controls:Inventory x:Name="Inventory" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <controls:InGameMessages x:Name="InGameMessages" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
