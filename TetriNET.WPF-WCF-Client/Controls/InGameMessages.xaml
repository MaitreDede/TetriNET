<UserControl x:Class="TetriNET.WPF_WCF_Client.Controls.InGameMessages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListBox x:Name="ListboxEntries" Background="White" Width="150" Height="260">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Id}" Foreground="Black"/>
                        <TextBlock Text="." Foreground="Black"/>
                        <TextBlock Text="{Binding Special}" Foreground="DarkMagenta"/>
                        <TextBlock Text="on" Foreground="black" Visibility="{Binding TargetVisibility}"/>
                        <TextBlock Text="{Binding Target}" Foreground="Blue" Visibility="{Binding TargetVisibility}"/>
                        <TextBlock Text="from" Foreground="black"/>
                        <TextBlock Text="{Binding Source}" Foreground="Blue" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
